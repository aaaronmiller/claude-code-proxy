                                                {/if}
                                            </div>
                                        </div>
                                    {/each}
                                </div>
                            </section>
                        {/each}
                    </div>
                {:else if modelsLoading}
                    <div class="text-center py-8 text-zinc-400">
                        <div class="animate-spin w-8 h-8 border-2 border-cyan-500 border-t-transparent rounded-full mx-auto mb-3"></div>
